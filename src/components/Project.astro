---
const { name, image, url, description } = Astro.props;
---

<a
  href={url}
  target="blank"
  rel="noopener noreferrer"
  class="flex flex-col items-start justify-center
w-56 h-full rounded-lg text-black dark:text-slate-100 bg-white dark:bg-slate-900 hover:transform hover:-translate-y-4 hover:scale-105 shadow-sm transition-transform duration-300 ease-in-out"
>
  <img
    src={image}
    alt={name}
    class="w-full h-32 min-h-32 max-h-32 object-cover rounded-t-md"
  />
  <div class="flex flex-col items-start w-full h-full justify-center px-3 py-2">
    <h2 class="text-md font-medium text-gray-900 dark:text-gray-100">
      {name}
    </h2>
    <p class="text-sm text-gray-600 dark:text-gray-400">
      {description}
    </p>
  </div>
</a>
