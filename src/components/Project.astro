---
const { name, image, url, description } = Astro.props;
---

<a
  href={url}
  target="blank"
  rel="noopener noreferrer"
  class="flex flex-col items-start justify-center w-60 h-full rounded-lg
  text-black dark:text-white hover:transform hover:scale-105 transition-transform duration-300 ease-in-out"
>
  <img
    src={image}
    alt={name}
    class="w-full min-h-36 max-h-36 object-cover rounded-md"
  />
  <div class="flex flex-col items-start w-full h-full justify-center p-2">
    <h2 class="text-md font-medium text-gray-900 dark:text-gray-100">
      {name}
    </h2>
    <p class="text-sm text-gray-600 dark:text-gray-400">
      {description}
    </p>
  </div>
</a>
